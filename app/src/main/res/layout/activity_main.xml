<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:layoutDescription="@xml/scene_main">

    <ImageView
        android:id="@+id/bgSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/backgroundspace"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_space"
        android:paddingBottom="415dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/ivRocket"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/rocketspace"
        android:elevation="4dp"
        android:rotation="-45"
        android:scaleType="centerCrop"
        android:src="@drawable/rocket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="550dp" />

    <ImageView
        android:id="@+id/ivSatellite"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/rocketspace"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/satellite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="550dp" />

    <View
        android:id="@+id/viewClickable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>